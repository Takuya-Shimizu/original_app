<% if current_user.try(:admin?) %>
  <h1>投稿一覧_管理画面</h1>
<% else %>
  <h1>投稿一覧</h1>
<% end %>

<table>
  <thead>
    <tr>
      <th>ユーザー名</th>
      <th>タイトル</th>
      <th>内容</th>
      <th>ラベル</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.user.name %></td>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><% post.labels.each do |label| %>
              <%= label.name %>
            <% end %></td>
        <td><%= link_to '詳細', post %></td>
        <td><%= link_to '編集', edit_post_path(post) %></td>
        <td><%= link_to '削除', post, method: :delete, data: { confirm: '削除して良いですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規投稿', new_post_path %>
