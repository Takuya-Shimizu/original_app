<ul class="list-group">
  <% comments.each do |comment| %>
    <% if comment.id.present? %>
      <li class="list-group-item">
        <div class="comment-content" id ="this_comment_<%= comment.id %>"></div>
        <p>投稿者: <%= comment.user.name %></p>
        <p><%= comment.content %></p>
        <% if comment.user == current_user %>
          <p><%= link_to "コメント編集", edit_post_comment_path(post, comment), remote: true %></p>
          <p><%= link_to "コメント削除", post_comment_path(comment.post_id, comment.id), method: :delete, remote: true,
                                       data: { confirm: "本当に削除しますか?"} %></p>
        <% end %>
      </li>
    <% end %>
  <% end %>
</ul>